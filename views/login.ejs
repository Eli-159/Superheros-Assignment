<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./components/head.ejs'); %>
    <script src="/js/login.js"></script>
      <title>Login | Superhero Society</title>
  </head>
  <body>
    <%- include('./components/header.ejs'); %>
      <main>
        <h2>Login</h2>
        <form action="../api/auth/login" method="POST" id="loginForm">
            <label for="emailInput" class="block">Email</label>
            <input type="text" name="email" id="emailInput" class="text" required>
            <br>
            <br>
            <label for="passwordInput" class="block">Password</label>
            <input type="password" name="password" id="passwordInput" class="text" minlength=6 required>
            <br>
            <br>
            <input type="submit" value="Submit" class="btn">
        </form>
      </main>
  </body>
</html>